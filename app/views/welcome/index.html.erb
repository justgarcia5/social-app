<% if user_signed_in? %>
    <%= react_component "Welcome", current_user: {
        id: current_user.id,
        email: current_user.email,
        username: current_user.username,
        firstname: current_user.firstname,
        lastname: current_user.lastname
    } %>
<% else %>
    <%= react_component 'Welcome', props: {
        'logged_in': false,
    } %>
<% end %>